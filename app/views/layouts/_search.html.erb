<div class="search-form">
  <%= form_with url: search_path, method: :get, local: true do |f| %>
    <%= f.text_field :content %><br>
    <%= f.select :model, options_for_select({ "ユーザー" => "customer", "つぶやき" => "post" }) %><br>
    <%= f.select :method, options_for_select({ "完全一致" => "perfect", "前方一致" => "forward", "後方一致" => "backward", "部分一致" => "partial" }) %><br>
    <%= f.submit '検索' %>
  <% end %>
</div>