<div id="comment-<%= comment.id %>">
  <div class="comment_box_left">
    <%= link_to mypage_path(comment.customer.id) do %>
      <%= attachment_image_tag comment.customer, :image, format: "jpeg", size:'60x60', fallback: "no-image.png" %>
    <% end %>
    <p class="comment_box_right">
      <%= link_to mypage_path(comment.customer.id) do %>
        FROM　<%= comment.customer.username %><br>
      <% end %>
      <%= comment.body %><br>
      <%= comment.created_at.strftime('%Y/%m/%d') %>
    </p>
  </div>
  <% if comment.customer == current_customer %>
    <div>
      <%= link_to "削除", post_comment_path(comment.post, comment), method: :delete, remote: true, class: "btn btn-danger" %>
      <%= link_to "編集", edit_post_comment_path(comment.post, comment), class: "btn btn-success" %>
    </div>
  <% end %>
  <hr>
</div>