<div class="col-xs-5">
  <h3>つぶやき内容</h3>
  <%= attachment_image_tag @post.customer, :image, format: "jpeg", size:'80x80', fallback: "no-image.png" %>
  <%= @post.body %><br>
  <%= @post.reference %>
  <%= @post.comments.count %>件
  <%= @post.favorites.count %>件
  <%= form_with model: @comment, url: post_comments_path(@post), local: true do |f| %>
    <%= f.text_area:body, :placeholder =>"コメントはこちらに！！", size: "60x3" %>
    <%= f.hidden_field :customer_id, :value => current_customer %>
    <%= f.hidden_field :post_id, :value => @post %>
    <%= f.submit "送信！！", class: "btn btn-primary" %>
  <% end %>
  <h4>コメント一覧</h4>
  <% @comments.each do |comment| %>
    <%= attachment_image_tag comment.customer, :image, format: "jpeg", size:'60x60', fallback: "no-image.png" %>
    <%= comment.body %>
    <% if comment.customer == current_customer %>
      <div>
        <%= link_to "削除", post_comment_path(@post, comment), method: :delete, class: "btn btn-danger pull-right" %>
      </div>
    <% end %>
    <hr>
  <% end %>
</div>
<div class="col-xs-5"></div>