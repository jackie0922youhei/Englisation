<div class="col-xs-5">
  <h3>つぶやき内容</h3>
  <div class="post_box">
    <div class="post_box_left">
      <%= link_to mypage_path(@post.customer.id) do %>
        <%= attachment_image_tag @post.customer, :image, format: "jpeg", size:'80x80', fallback: "no-image.png" %>
      <% end %>
    </div>
    <div class="post_box_right">
      <div class="post_body">
        <%= @post.body %>
      </div>
      <div class="post_reference">
        <%= @post.reference %>
      </div>
      <%= @post.comments.count %>件
      <% if customer_signed_in? %>
        <% if @post.favorited_by?(current_customer) %>
          <%= link_to post_favorites_path(@post), method: :delete do %>
            <i class="fa fa-heart" aria-hidden="true" style="color: red;"></i>
            <%= @post.favorites.count %> いいね
          <% end %>
        <% else %>
          <%= link_to post_favorites_path(@post), method: :post do %>
            <i class="fa fa-heart-o" aria-hidden="true"></i>
            <%= @post.favorites.count %> いいね
          <% end %>
        <% end %>
      <% else %>
        <%= @post.favorites.count %> いいね
      <% end %>
    </div>
  </div>
  <% if customer_signed_in? %>
    <%= form_with model: @comment, url: post_comments_path(@post), method: :post, remote: true do |f| %>
      <%= f.text_area:body, :placeholder =>"コメントはこちらに！！", size: "60x3" %>
      <%= f.hidden_field :customer_id, :value => current_customer.id %>
      <%= f.hidden_field :post_id, :value => @post.id %>
      <%= f.submit "送信！！", class: "btn btn-primary" %>
    <% end %>
  <% end %>
  <h4>コメント一覧</h4>
  <div id="comment_box" class="comment_box">
    <%= render 'customers/comments/comments_area', post: @post %>
  </div>
</div>
<div class="col-xs-5">
  <h4>レビュー一覧</h4>
  <div id="review_box" class="review_box">
    <%= render 'customers/reviews/reviews_area', post: @post %>
  </div>
  <% if customer_signed_in? %>
    <%= form_with model: @review, url: post_reviews_path(@post), method: :post, remote: true do |f| %>
      <%= f.text_area:body, :placeholder =>"レビューはこちらに！！", size: "60x3" %>
      <%= f.hidden_field :customer_id, :value => current_customer.id %>
      <%= f.hidden_field :post_id, :value => @post.id %>
      <%= f.submit "レビュー！！", class: "btn btn-primary" %>
    <% end %>
  <% end %>
</div>