<div class="col-xs-5">
  <h3>つぶやき内容</h3>
  <%= link_to mypage_path(@post.customer.id) do %>
    <%= attachment_image_tag @post.customer, :image, format: "jpeg", size:'80x80', fallback: "no-image.png" %>
  <% end %>
  <%= @post.body %><br>
  <%= @post.reference %>
  <%= @post.comments.count %>件
  <% if customer_signed_in? %>
    <% if @post.favorited_by?(current_customer) %>
      <%= link_to post_favorites_path(@post), method: :delete do %>
        <i class="fa fa-heart" aria-hidden="true" style="color: red;"></i>
        <%= @post.favorites.count %> いいね
      <% end %>
    <% else %>
      <%= link_to post_favorites_path(@post), method: :post do %>
        <i class="fa fa-heart-o" aria-hidden="true"></i>
        <%= @post.favorites.count %> いいね
      <% end %>
    <% end %>
  <% else %>
    <%= @post.favorites.count %> いいね
  <% end %>
  <% if customer_signed_in? %>
    <%= form_with model: @comment, url: post_comments_path(@post), local: true do |f| %>
      <%= f.text_area:body, :placeholder =>"コメントはこちらに！！", size: "60x3" %>
      <%= f.hidden_field :customer_id, :value => current_customer.id %>
      <%= f.hidden_field :post_id, :value => @post.id %>
      <%= f.submit "送信！！", class: "btn btn-primary" %>
    <% end %>
  <% end %>
  <h4>コメント一覧</h4>
  <% @post.comments.each do |comment| %>
    <%= attachment_image_tag comment.customer, :image, format: "jpeg", size:'60x60', fallback: "no-image.png" %>
    <%= comment.customer.username %><br>
    <%= comment.body %><br>
    <%= comment.created_at.strftime('%Y/%m/%d') %>
    <% if comment.customer == current_customer %>
      <div>
        <%= link_to "削除", post_comment_path(@post, comment), method: :delete, class: "btn btn-danger" %>
      </div>
    <% end %>
    <hr>
  <% end %>
</div>
<div class="col-xs-5">
  <h4>レビュー一覧</h4>
  <% @post.reviews.each do |review| %>
    <%= attachment_image_tag review.customer, :image, format: "jpeg", size:'60x60', fallback: "no-image.png" %>
    <%= review.customer.username %><br>
    <%= review.body %><br>
    <%= review.created_at.strftime('%Y/%m/%d') %>
    <% if review.customer == current_customer %>
      <div>
        <%= link_to "削除", post_review_path(@post, review), method: :delete, class: "btn btn-danger" %>
      </div>
    <% end %>
    <hr>
  <% end %>
  <% if customer_signed_in? %>
    <%= form_with model: @review, url: post_reviews_path(@post), local: true do |f| %>
      <%= f.text_area:body, :placeholder =>"レビューはこちらに！！", size: "60x3" %>
      <%= f.hidden_field :customer_id, :value => current_customer.id %>
      <%= f.hidden_field :post_id, :value => @post.id %>
      <%= f.submit "レビュー！！", class: "btn btn-primary" %>
    <% end %>
  <% end %>
</div>