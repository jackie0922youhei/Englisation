<div class="col-xs-2">
  <h4>アカウント情報</h4>
  <%= attachment_image_tag @customer, :image, format: "jpeg", size:'100x100', id: "img_prev", fallback: "no-image.png", class: "customer_image" %>
  
</div>
<div class="col-xs-6">
  <h3>投稿一覧</h3>
  <% @posts.each do |post| %>
    <%= post.customer.image_id %>
    <%= post.body %>
    <%= post.comments.count %>件
    <%= post.favorites.count %>件
  <% end %>
</div>
<div class="col-xs-2">
  <%= form_with model:@post, url:new_post_path, local: true do |f| %>
    <%= f.text_area :body, :placeholder =>"気軽につぶやこう！！" %>
    <%= f.text_field :reference, :placeholder =>"参考になった映画など" %>
    <%= f.submit "英語でつぶやく！！", class: "btn btn-primary" %>
  <% end %>
</div>