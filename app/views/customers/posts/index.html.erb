<% if flash[:notice] %>
  <p class="text-active"><%= flash[:notice] %></p>
<% end %>
<div class="col-xs-3">
  <div id="profile_area">
    <%= render 'customers/customers/profile' %>
  </div>
  <div class="teacher_index">
    <h4>講師一覧</h4>
    <% @teachers.each do |teacher| %>
      <%= link_to mypage_path(teacher) do %>
        <%= attachment_image_tag teacher, :image, format: "jpeg", size:'60x60', fallback: "no-image.png" %>
        <%= teacher.username %>
      <% end %>
      <hr>
    <% end %>
  </div>
</div>
<div class="col-xs-4">
  <h3>投稿一覧</h3>
  <div id="post_box" class="post_box">
    <%= render @posts %>
  </div>
</div>
<div class="col-xs-3">
  <% if customer_signed_in? %>
    <%= render 'customers/posts/post_form', post: @post %>
  <% end %>
  <h4>閲覧数ランキング</h4>
</div>