<div class="col-xs-3">
  <% if flash[:notice] %>
    <p class="text-active"><%= flash[:notice] %></p>
    <hr>
  <% end %>
  <div id="profile_area">
    <%= render 'customers/customers/profile' %>
  </div><hr>
  <div class="teacher_index">
    <h4>講師一覧</h4>
    <%= render partial: "customers/customers/teacher", collection: @teachers %>
  </div>
</div>
<div class="col-xs-4">
  <div id="post_box" class="post_box">
    <%= render @posts %>
    <%= paginate @posts %>
  </div>
</div>
<div class="col-xs-3">
  <% if customer_signed_in? %>
    <%= render 'customers/posts/post_form', post: @post %>
  <% end %>
  <hr>
  <div class="ranking-box">
    <h4>いいね数ランキング</h4>
    <table class="table table-noborder table-sm">
      <%= render partial: "customers/posts/favorite_ranking", collection: @favorite_rankings %>
    </table>
  </div>
  <div class="ranking-box">
    <h4>コメント数ランキング</h4>
    <table class="table table-noborder table-sm">
      <%= render partial: "customers/posts/comment_ranking", collection: @comment_rankings %>
    </table>
  </div>
</div>