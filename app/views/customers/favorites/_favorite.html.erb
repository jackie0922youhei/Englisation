<% if customer_signed_in? %>
  <% if post.favorited_by?(current_customer) %>
    <%= link_to post_favorites_path(post), remote: true, class: "inlink", method: :delete do %>
      <i class="fa fa-heart" aria-hidden="true" style="color: red;"></i>
      <%= post.favorites.count %> 件
    <% end %>
  <% else %>
    <%= link_to post_favorites_path(post), remote: true, class: "inlink", method: :post do %>
      <i class="fa fa-heart-o" aria-hidden="true"></i>
      <%= post.favorites.count %> 件
    <% end %>
  <% end %>
<% else %>
  <i class="fa fa-heart inlink" aria-hidden="true" style="color: red;"></i>
  <%= post.favorites.count %> 件
<% end %>