<h2>ログイン</h2>

<%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
  <table class="table">
    <tr>
      <th><%= f.label :username, "ユーザーネーム" %></th>
      <td><%= f.text_field :username, autofocus: true, autocomplete: "username" %></td>
    </tr>
    <tr>
      <th><%= f.label :password, "パスワード" %></th>
      <td><%= f.password_field :password, autocomplete: "current-password" %></td>
    </tr>
  </table>

  <% if devise_mapping.rememberable? %>
    <div class="field">
      <%= f.check_box :remember_me %>
      <%= f.label :remember_me, "パスワードを記憶する" %>
    </div>
  <% end %>

  <div class="actions">
    <%= f.submit "ログインする" %>
  </div>
<% end %>

<%= render "customers/shared/links" %>
