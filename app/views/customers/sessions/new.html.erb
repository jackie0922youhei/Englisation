<div class="col-xs-2"></div>
<div class="col-xs-6">
  <h2>ログイン</h2>
  <%= flash[:error] %>
  <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
    <table class="table">
      <tr>
        <th><%= f.label :username, "ユーザーネーム" %></th>
        <td>
          <div class="icon-position">
            <%= f.text_field :username, class:"form-control", id:"inputName", required: true, autofocus: true, autocomplete: "username", placeholder:"Username" %>
            <span class="fa fa-user form-control-icon" aria-hidden="true"></span>
          </div>
        </td>
      </tr>
      <tr>
        <th><%= f.label :password, "パスワード" %></th>
        <td>
          <div class="icon-position">
            <%= f.password_field :password, class:"form-control", id:"inputName", required: true, autocomplete: "current-password", placeholder:"Password" %>
            <span class="fa fa-lock form-control-icon" aria-hidden="true"></span>
          </div>
        </td>
      </tr>
    </table>

    <% if devise_mapping.rememberable? %>
      <div class="field">
        <%= f.check_box :remember_me %>
        <%= f.label :remember_me, "パスワードを記憶する" %>
      </div>
    <% end %>

    <div class="actions">
      <%= f.submit "ログインする", class:"btn btn-lg btn-block btn-base-1 mt-20 btn-primary" %>
    </div>
  <% end %>

  <%= render "customers/shared/links" %>
  </div>
<div class="col-xs-2"></div>