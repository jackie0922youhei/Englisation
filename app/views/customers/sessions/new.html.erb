<h2>ログイン</h2>
<%= flash[:error] %>

<%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
  <table class="table">
    <tr>
      <th><%= f.label :username, "ユーザーネーム" %></th>
      <td>
        <div class="icon-position">
          <%= f.text_field :username, class:"form-control", id:"inputEmail", required: true, autofocus: true, autocomplete: "username" %>
          <span class="fa fa-user form-control-icon" aria-hidden="true"></span>
        </div>
      </td>
    </tr>
    <tr>
      <th><%= f.label :password, "パスワード" %></th>
      <td>
        <div class="icon-position">
          <%= f.password_field :password, class:"form-control", required: true, autocomplete: "current-password" %>
          <span class="fa fa-lock form-control-icon" aria-hidden="true"></span>
        </div>
      </td>
    </tr>
  </table>

  <% if devise_mapping.rememberable? %>
    <div class="field">
      <%= f.check_box :remember_me %>
      <%= f.label :remember_me, "パスワードを記憶する" %>
    </div>
  <% end %>

  <div class="actions">
    <%= f.submit "ログインする", class:"btn btn-lg btn-block btn-base-1 mt-20" %>
  </div>
<% end %>

<%= render "customers/shared/links" %>
