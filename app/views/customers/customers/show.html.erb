<% if flash[:notice] %>
  <p class="text-active"><%= flash[:notice] %></p>
<% end %>
<h3><%= @customer.username %>さんのページ
  <% if @customer == current_customer %>
    <%= link_to "編集する", edit_mypage_path(@customer), class: "btn btn-success ml2" %>
    <%= link_to "パスワードを変更する", edit_customer_password_path, class: "btn btn-success ml2" %>
  <% end %>
</h3>
<div class="col-xs-5">
  <div class="profile_box">
    <div class="profile_box_left">
      <%= attachment_image_tag @customer, :image, format: "jpeg", fallback: "no-image.png", size:'200x200', class: "customer_image" %>
    </div>
    <div class="profile_box_right">
      <%= render 'customers/relationships/follow_count', customer: @customer %>
      <% if customer_signed_in? %>
        <%= render 'customers/relationships/follow_form', customer: @customer %>
      <% end %>
    </div>
  </div>
  <table class="table">
    <tr>
      <th>ユーザネーム</th>
      <td><%= @customer.username %></td>
    </tr>
    <tr>
      <th>氏名</th>
      <td><%= @customer.first_name %>　<%= @customer.last_name %></td>
    </tr>
    <tr>
      <th>氏名(カナ)</th>
      <td><%= @customer.first_name_kana %>　<%= @customer.last_name_kana %></td>
    </tr>
    <tr>
      <th>メールアドレス</th>
      <td><%= @customer.email %></td>
    </tr>
    <tr>
      <th>電話番号</th>
      <td><%= @customer.telephone_number %></td>
    </tr>
  </table>
</div>
<div class="col-xs-5">
  <h3>投稿一覧</h3>
  <% @posts.each do |post| %>
    <div class="post_box">
      <div class="post_box_left">
        <%= attachment_image_tag post.customer, :image, format: "jpeg", size:'80x80', fallback: "no-image.png" %>
      </div>
      <div class="post_box_right">
        <div class="post_body">
          <%= link_to post_path(post) do %>
            <%= post.body %><br>
          <% end %>
        </div>
        <div class="post_reference">
          <%= post.reference %><br>
        </div>
        <%= post.created_at.strftime('%Y/%m/%d') %><br>
        <%= post.comments.count %>件
        <% if post.favorited_by?(@customer) %>
          <% if customer_signed_in? %>
            <%= link_to post_favorites_path(post), method: :delete do %>
              <i class="fa fa-heart" aria-hidden="true" style="color: red;"></i>
            <% end %>
          <% end %>
          <%= post.favorites.count %> いいね<br>
        <% else %>
          <% if customer_signed_in? %>
            <%= link_to post_favorites_path(post), method: :post do %>
              <i class="fa fa-heart-o" aria-hidden="true"></i>
            <% end %>
          <% end %>
          <%= post.favorites.count %> いいね<br>
        <% end %>
      </div>
    </div>
    <% if post.customer == current_customer %>
      <div>
        <%= link_to "削除", post_path(post), method: :delete, class: "btn btn-danger" %>
      </div>
    <% end %>
    <hr>
  <% end %>
</div>