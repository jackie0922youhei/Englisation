<% if flash[:notice] %>
  <p class="text-active"><%= flash[:notice] %></p>
<% end %>
<h3>マイページ
  <%= link_to "編集する", edit_information_path, class: "btn btn-success ml2" %>
  <%= link_to "パスワードを変更する", edit_customer_password_path, class: "btn btn-success ml2" %>
</h3>
<div class="col-xs-3">
  <%= attachment_image_tag @customer, :image, format: "jpeg", fallback: "no-image.png", size:'200x200', class: "customer_image" %>
</div>
<div class="col-xs-7">
  <table class="table">
    <tr>
      <th>ユーザネーム</th>
      <td><%= @customer.username %></td>
    </tr>
    <tr>
      <th>氏名</th>
      <td><%= @customer.first_name %>　<%= @customer.last_name %></td>
    </tr>
    <tr>
      <th>氏名(カナ)</th>
      <td><%= @customer.first_name_kana %>　<%= @customer.last_name_kana %></td>
    </tr>
    <tr>
      <th>メールアドレス</th>
      <td><%= @customer.email %></td>
    </tr>
    <tr>
      <th>電話番号</th>
      <td><%= @customer.telephone_number %></td>
    </tr>
  </table>
</div>