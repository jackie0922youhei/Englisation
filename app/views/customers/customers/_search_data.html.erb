<tr>
  <td>
    <%= link_to mypage_path(search_data.id) do %>
      <%= attachment_image_tag search_data, :image, format: "jpeg", size:'40x40', id: "img_prev", fallback: "no-image.png", class: "customer_image img" %>
    <% end %>
  </td>
  <td><%= search_data.username %></td>
  <td>
    <% if search_data.is_teacher == true %>
      <span class="text-active">講師	</span>
    <% else %>
      <span class="text-active">一般会員</span>
    <% end %>
  </td>
  <td><%= link_to "このユーザーのつぶやき一覧", mypage_path(search_data) %></td>
</tr>