<tr>
  <td>
    <%= link_to mypage_path(follower.id) do %>
      <%= attachment_image_tag follower, :image, format: "jpeg", size:'80x80', id: "img_prev", fallback: "no-image.png", class: "customer_image" %>
    <% end %>
    </td>
  <td><%= follower.username %></td>
  <td>
    <% if follower.is_teacher == true %>
      <span class="text-active">講師	</span>
    <% else %>
      <span class="text-active">一般会員</span>
    <% end %>
  </td>
  <td><%= link_to "このユーザーのつぶやき一覧", mypage_path(follower) %></td>
</tr>