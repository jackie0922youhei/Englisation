<% if customer_signed_in? %>
  <div class="profile-image-box">
    <%= link_to mypage_path(current_customer.id) do %>
      <%= attachment_image_tag current_customer, :image, format: "jpeg", size:'150x150', id: "img_prev", fallback: "no-image.png", class: "customer_image" %>
    <% end %>
  </div>
  <table class="table">
    <tr>
      <th>ユーザネーム</th>
      <td><%= current_customer.username %></td>
    </tr>
    <tr>
      <th>フォロー数</th>
      <td><%= current_customer.followings.count %> 人</td>
    </tr>
    <tr>
      <th>フォロワー数</th>
      <td><%= current_customer.followers.count %> 人</td>
    </tr>
    <tr>
      <th>つぶやき数</th>
      <td><%= current_customer.posts.count %></td>
    </tr>
  </table>
  <hr>
<% end %>