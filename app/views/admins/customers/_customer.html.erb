<tr>
  <td><%= customer.id %></td>
  <td><%= customer.username %></td>
  <td><%= customer.first_name %> <%= customer.last_name %></td>
  <td>
    <% if customer.is_teacher? %>
      <span class="text-active">講師</span>
    <% else %>
      <span class="text-active">生徒</span>
    <% end %>
  </td>
  <td>
    <% if customer.is_deleted? %>
      <span class="text-invalid">退会済み</span>
    <% else %>
      <span class="text-active">有効</span>
    <% end %>
  </td>
  <td><%= link_to "編集", edit_admins_customer_path(customer), class: "btn btn-primary" %></td>
  <td><%= link_to "詳細", admins_customer_path(customer), class: "btn btn-primary" %></td>
</tr>