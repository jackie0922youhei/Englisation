<div class="col-xs-2"></div>
<div class="col-xs-6">
<h2>管理者ログイン</h2>
<%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
  <table class="table">
    <tr>
      <th><%= f.label :username, "ユーザネーム " %></th>
      <td><%= f.text_field :username, autofocus: true, autocomplete: "email" %></td>
    </tr>
    <tr>
      <th><%= f.label :password, "パスワード" %></th>
      <td><%= f.password_field :password, autocomplete: "current-password" %></td>
    </tr>
  </table>

  <% if devise_mapping.rememberable? %>
    <div class="field">
      <%= f.check_box :remember_me %>
      <%= f.label :remember_me, "パスワードを記憶する" %>
    </div>
  <% end %>

  <div class="actions">
    <%= f.submit "ログインする", class:"btn btn-lg btn-block btn-base-1 mt-20 btn-primary" %>
  </div>
<% end %>
</div>
<div class="col-xs-2"></div>